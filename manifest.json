{
  "name": "AO3rdr",
  "description": "Rating system and block by tag system for Archive of Our Own",
  "version": "1.0.5",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://archiveofourown.org/*"],
      //"css": ["mystyles.css"],
      "js": ["lib/jquery-1.11.2.min.js", "src/ao3lib.js", "src/toolbar-ao3.js"],
      "all_frames": true
    }
  ],

  "browser_action": {
    "default_title": "AO3rdr"
  },
  "manifest_version": 2,

  "web_accessible_resources": [
    "data/images/*",
    "data/settings/*"
  ]
}